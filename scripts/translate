#!/bin/bash
# Λ Language Translator CLI
# Usage: translate <cmd> <message>

SCRIPT_DIR="$(cd "$(dirname "$0")" && pwd)"
PYTHON_SCRIPT="$SCRIPT_DIR/../src/lambda_lang.py"

if [ -z "$1" ] || [ -z "$2" ]; then
    echo "Usage: translate <en|lambda|parse> <message>"
    echo ""
    echo "Examples:"
    echo '  translate en "?Uk/co"           # Λ → English'
    echo '  translate lambda "I think"      # English → Λ'
    echo '  translate parse "?Uk/co"        # Show tokens'
    exit 1
fi

CMD="$1"
shift
MSG="$*"

python3 "$PYTHON_SCRIPT" "$CMD" "$MSG"
